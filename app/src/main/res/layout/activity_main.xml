<?xml version="1.0" encoding="utf-8"?>
<!-- Glass EE2 optimized layout - content positioned in upper-right -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="16dp">

    <!-- Status chips in top-right corner -->
    <LinearLayout
        android:id="@+id/statusLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/languageChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:padding="6dp"
            android:layout_marginEnd="4dp"
            android:text="EN" />

        <TextView
            android:id="@+id/recStateChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:padding="6dp"
            android:layout_marginEnd="4dp"
            android:text="READY" />

        <TextView
            android:id="@+id/batteryChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:padding="6dp"
            android:text="--%" />
    </LinearLayout>

    <!-- Caption text positioned in upper portion, aligned to right -->
    <TextView
        android:id="@+id/captionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusLayout"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="40dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:lineSpacingExtra="4dp"
        android:gravity="end"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="Tap to start captioning" />

    <!-- Help text at bottom -->
    <TextView
        android:id="@+id/helpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="#80FFFFFF"
        android:textSize="12sp"
        android:text="Tap: start/pause â€¢ Long-press: stop" />

</RelativeLayout>